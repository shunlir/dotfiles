
"seg_vimrc-begin
set tabstop=4
set expandtab
set shiftwidth=4
set softtabstop=4
filetype plugin indent on
au FileType c setl ofu=ccomplete#CompleteCpp
" case insensitive when seaching
set ignorecase
" incremental searches
set incsearch
" highlight search
set hlsearch
" vim buildin command line completion
set wildmenu
" let Vim jump to the last position when reopening a file
if has("autocmd")
  au BufReadPost * if line("'\"") > 1 && line("'\"") <= line("$") | exe "normal! g'\"" | endif
endif
"seg_vimrc-end
